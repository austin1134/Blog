<body>

@foreach (var x in Model)
{
    <div class="row medium-8 large-7 columns" style="text-align: center">
        <div class="blog-post">
            <h2>@x.Title<small>Created:@x.Created</small>
            </h2>
            <img class="thumbnail" src="@x.MediaUrl">
            <div id="wrapper">
                <p>@Html.Raw(x.Body)
                    @Html.ActionLink(
                       "Read More",
                       "Details",
                       new { id = x.Id},
                       new { @class = "post-details"})
               </p>
            </div>
            <div class="callout">
                <ul class="menu simple">
                    @*<li><a href="~/Views/Posts/Details.cshtml">Read More</a></li>
                    <li><a href="#">Comments: 3</a></li>*@
                </ul>
            </div>
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
<script>
    $(function () {
        ('.post-details').on('click', function (e) {
            $.get($(this).prop('href'), function (response) {
            });
            e.preventDefault();
        });
    });

    $(document).ready(function() {
        $("#wrapper").dotdotdot({
            ellipsis: '... '
        });
    });

    $(document).foundation();
</script>
</body>













